<div class="contents row">
    <div class="more">
      <span><%= image_tag @recommend.image, class: "recommend-img" %></span>
    </div>
    <% if user_signed_in? %>
      <% if current_user.id == @recommend.user_id %>
        <ul class="more_list">
          <li>
            <%= link_to '削除', recommend_path(@recommend.id), method: :delete %>
          </li>
        </ul>
      <% end %>
    <% end %>
    <span class="name"><%= @recommend.place_name %></span>
    <p><%= @recommend.region.name %></p>
    <p><%= @recommend.city.name %></P>
    <p><%= @recommend.category.name %></p>
</div>