<!DOCTYPE html>
<html>
  <head>
    <title>Original37116</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header class="header">
    <div class="header-bar-big">
      <div class="header__bar row">
        <h1 class="grid-6"><%= link_to 'Recommended spots in Ehime', root_path %></h1>
          <% if user_signed_in? %>
            <div class="user_nav grid-6">
              <%= link_to "#{current_user.nickname}", "/users/#{current_user.id}", clsss: "post" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "post" %>
              <%= link_to 'New post', new_recommend_path, method: :get, class: 'post' %>
            </div>
          <% else %>
            <div class="grid-6">
              <%= link_to "Log in", new_user_session_path, class: "post" %>
              <%= link_to "Sign up", new_user_registration_path, class: "post" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </header>
  <body>
    <%= yield %>
  </body>
  <footer>
    <p>
      Imochan's work
    </p>
  </footer>
</html>
